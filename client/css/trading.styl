.main_trading
  position absolute
  top 50px
  left 20px
  bottom 20px
  right 20px
  color light_blue

  .main_title 
    position absolute
    font-size 20px
    top -35px
    left 5px
    color rgba(0,0,0,0.6)

  .form
    position absolute 
    top 0
    left 0
    bottom 0
    width calc(33% - 10px)
    background rgba(0,0,0,0.02)

    .top
      position absolute
      top 0px
      left 0
      right 0
      height 28px
      background #f3f3f3
      box-shadow 0px 1px 1px rgba(0,0,0,0.2)
      z-index 1
      text-transform uppercase

      .inner
        position absolute 
        top 0
        left 0
        bottom 3px
        right 0
        background white
        text-align center
        font-weight bold
        font-size 12px

        .title
          padding-top 8px

    .preview
      position absolute
      left 0
      top 26px
      right 0
      height 103px
      background #f3f3f3
      box-shadow 0px 1px 1px rgba(0,0,0,0.2)
      z-index 3
      text-align center

      .inner
        position absolute 
        top 0
        left 0
        bottom 3px
        right 0
        background white







    .mid
      position absolute
      top 185px
      left 20px
      bottom 71px
      right 20px
      background #f3f3f3
      box-shadow 0px 1px 1px rgba(0,0,0,0.2)
      z-index 1
      transition bottom 0.1s linear

      .inner
        position absolute 
        top 0
        left 0
        bottom 3px
        right 0
        background white

        ul
          height 100%
          width 100%
          overflow scroll
          padding-right 10px

          li 
            height calc(20% - 1px)
            min-height 50px
            text-align center
            border-top 1px solid rgba(0,0,0,0.1)
            cursor pointer
            position relative

            .choice_text
              width 80%
              right 10%
              height 24px
              top 50%
              margin-top -12px
              position absolute
              user-select none
              font-size 24px

              .symbol
                font-size 16px
                position relative
                top -2px
                left -3px

          li:first-child
            border-top none
            height 20%

          .selected
            color teal
            background teal_film

    .submit
      position absolute 
      bottom 0
      left 0
      right 0
      height 53px
      background blue


    .save
      position absolute
      bottom 20px
      left 20px
      right 20px
      height 53px
      background teal_shadow
      box-shadow 0px 1px 1px rgba(0,0,0,0.2)
      z-index 4
      cursor pointer
      user-select none

      .inner
        position absolute 
        top 0
        left 0
        bottom 3px
        right 0
        background teal
        color white

        .save_text
          position absolute 
          left 2px
          right 0
          text-align center
          height 20px
          font-size 24px
          top 50%
          margin-top -12px


    .save:active 
      bottom 18px
      box-shadow 0px 1px 0px rgba(0,0,0,0.05)
