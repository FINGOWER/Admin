.main_compliance
  position absolute
  top 50px
  left 20px
  bottom 20px
  right 20px
  color light_blue

  .main_title 
    position absolute
    font-size 20px
    top -35px
    left 5px
    color rgba(0,0,0,0.6)

  .card
    .inner
      .mid
        .description
          width 25%
          min-height 100%
          float left

        .settings
          width calc(75% - 26px)
          min-height 100%
          float right
          border-left 1px solid rgba(0,0,0,0.1)
          position relative
          padding-left 25px

          .bar
            width 100%
            height 50px
            background rgba(0,0,0,0.1)

            .fill
              display block

          input, select
            width calc(100% - 25px)
            padding 5px
            margin 0
            outline none
            display block
            border 0
            border-radius 0px
            outline 0
            font-size 14px
            text-align center
            font-weight normal

          input, textarea, select
            transition all 0.30s ease-in-out
            outline none
            box-shadow inset 0 0 0px 1px rgba(0,0,0,0.1)

          input:focus, textarea:focus, select:focus
            box-shadow inset 0 0 0px 1px rgba(55, 232, 215, 1)

          select
            //background rgba(0,0,0,0.1)
            display block
            //border 1px solid rbga(0,0,0,0.1)
            border-radius 0px
            //appearance none
            outline 0
            text-align center


          .limits
            ul
              li
                width 100%
                overflow hidden
                margin-top 10px

                div
                  float left
                  width calc(33% - 25px)
                  padding-left 25px


            .base
              .limit
                display block
              .verify_type
                display block
            .extended
              .limit
                display block
              .verify_type
                display block

          .verify_service
            padding-top 25px
            overflow hidden

            .label 
              float left
              width calc(33% - 25px)
              padding-left 25px

            div
              float right
              width calc(66% - 25px)
              padding-left 25px
              margin-top 10px

          .save
            width 33%
            background teal
            color white
            margin 0 auto
            cursor pointer
            text-align center
            margin-top 50px
            padding 25px




