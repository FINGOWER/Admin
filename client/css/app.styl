          .inner
            background white
            position absolute 
            top 0
            bottom 3px
            right 0
            left 0

            .top
              position absolute 
              top -50px
              left 0px
              right 0
              height 75px
              border-bottom 1px solid rgba(0,0,0,0.1)
              pointer-events none

            .mid
              position absolute 
              top 26px
              left 0
              right 0
              bottom 26px
              overflow scroll
              padding 25px

              .description
                min-height 100%
                float left
                overflow hidden
                width 30%

              .settings
                min-height 100%

                float right
                overflow hidden
                width calc(70% - 11px)
                border-left 1px solid rgba(0,0,0,0.1)
                padding-left 10px


                .limits //compliance 

                  ul

                    li 
                      width 100%
                      margin-bottom 10px
                      height 40px
                      position relative

                      .label
                        position absolute 
                        right calc(60% + 10px)
                        top 0
                        bottom 0
                        width 40%                       
                        padding-top 5px
                        font-size 20px
                        text-align right

                      .limit
                        position absolute 
                        right calc(40% + 10px)
                        top 0
                        bottom 0
                        width calc(20% - 10px)

                        input 
                          text-align right

                        .currency
                          position absolute 
                          top 9px
                          left 6px


                      .verify_type
                        position absolute 
                        right 0
                        top 0
                        bottom 0
                        width 40%

                .verify_service
                  position relative 
                  margin-top 50px
                  height 140px

                  input
                    text-align center

                  .label
                    position absolute 
                    top 0
                    bottom 0
                    width 40%                       
                    padding-top 5px
                    font-size 20px
                    right calc(60% + 10px)
                    text-align right

                  .service
                    position absolute 
                    right 0
                    width 60%
                  .username
                    position absolute 
                    top 50px
                    right 0
                    width 60%

                  .password
                    position absolute 
                    top 100px
                    right 0
                    width 60%



            .bot
              position absolute 
              bottom 0
              left 0
              right 0
              height 25px
              border-top 1px solid rgba(0,0,0,0.1)

