@import 'nib'
@import './fonts'

//dark_gray = #2d2d2d
dark_blue = #1d2327
light_blue = #3e4a52

cream = #f6f6f4
teal = #37e8d7
teal_shadow = #31d0c1
teal_film = #effffb
teal_film_shadow = #e5f5f1


//new
dark_gray = #2d2d2d
light_gray = #5f5f5f
tan_gray = #babaae
cream_gray = #f5f5f2

body, html
  height 100%
  width 100%
  overflow hidden

body
  position relative
  font-family Brandon, helvetica, sans-serif
  min-width 960px
  min-height 500px
  font-size 16px

  ul
    list-style none
    margin 0
    padding 0

  .panel
    position absolute
    left 0
    top 0
    bottom 0
    width 205px
    background dark_gray

    .disbled
      opacity 0.25
      pointer-events none

    .logo
      position absolute 
      top 0
      left 0
      right 0
      height 75px
      background url('/images/lamassu-logo.png') 20px 50% no-repeat
      //background-size 55%
      z-index 4

    .menu
      display none
      position absolute 
      top 75px
      left 0
      right 0
      bottom 75px
      z-index 2
      overflow scroll

      ul
        color rgba(255,255,255,1)
        z-index 2
        cursor pointer
        list-style none
        margin 0
        padding 0
        
        li
          position relative
          height 50px
          width 100%
          //border-top 1px solid rgba(0,0,0,0.3)
          //text-align center
          color light_gray
          //font-size 15px
          font-weight bold

          
          .text
            position absolute
            padding-left 67px
            padding-top 15px

          .icon
            position absolute
            top 0px
            left 24px
            width 30px
            height 50px
            background-size 30px 30px
            background-repeat no-repeat
            background-position center center

        li:hover
          color teal
          transition all 0.30s ease-in-out

        li:first-child
          border-top none

        li.selected
          color teal
          transition all 0.30s ease-in-out
          background rgba(0,0,0,0.1)

    .display
      display none
      position absolute 
      bottom 0 
      height 75px
      left 0
      bottom 0
      right 0
      text-align center
      z-index 4

      background rgba(0,0,0,0.1)

      .text
        color white
        font-size 10px
        position absolute 
        height 12px
        bottom 14px
        left 0px
        right 0
        text-transform uppercase
        letter-spacing 3px
        margin-right -3px

      .price
        color white
        position absolute
        font-size 30px
        right 0px
        left 0
        top 10px
        //font-family Raleway
        color teal
        letter-spacing 3px
        margin-right -3px


        .currency 
          position relative 
          top -6px
          font-size 17px
          left 0

      .subtext
        color teal
        font-size 10px
        position absolute 
        height 12px
        bottom 34px
        left 0px
        right 0
        text-transform uppercase
        display none

        .currency
          position relative 
          top -1px
          font-size 8px
          left -2px



  .dash
    position absolute
    right 0
    top 0
    bottom 0
    left 205px
    background cream_gray
    z-index 20

    .login
      position absolute 
      top 0
      left 0
      right 0
      bottom 0

      input, textarea
        transition all 0.30s ease-in-out
        outline none
        box-shadow inset 0 0 0px 1px rgba(55, 232, 215, 0)
       
      input:focus, textarea:focus
        box-shadow inset 0 0 0px 1px rgba(55, 232, 215, 1)

      .box
        width 320px
        height 180px
        position absolute 
        left 50%
        margin-left -160px
        top 50%
        margin-top -120px
        font-size 24px

        input
          display block
          border 0
          border-radius 0px
          margin 0
          padding 0
          text-align center
          font-size 24px
          color light_gray
          position absolute
          width 100% 
          top 0px
          left 0px
          right 0px
          bottom 3px

        .message
          position absolute 
          top 0
          left 0
          right 0
          color light_gray
          font-size 20px
          text-align center

        .email
          position absolute 
          top 40px
          left 0
          right 0
          height 53px
          background #f3f3f3
          box-shadow 0px 1px 1px rgba(0,0,0,0.2)

        .password
          position absolute 
          top 100px
          left 0
          right 0
          height 53px
          background #f3f3f3
          box-shadow 0px 1px 1px rgba(0,0,0,0.2)

        .submit
          position absolute 
          left 0
          right 0
          top 160px
          height 41px
          background teal
          color white
          text-align center
          padding-top 14px
          cursor pointer
          box-shadow 0px 1px 1px rgba(0,0,0,0.2)

        .shadow
          position absolute 
          bottom 0
          left 0
          right 0
          height 3px
          background teal_shadow

     
    .main
      position absolute 
      top 0
      right 0
      bottom 0
      left 0

      .links
        height 15px
        position absolute 
        right 53px
        top 28px
        left 0
        text-align right
        font-size 14px
        color tan_gray

        li
          float right
          margin-left 25px
          cursor pointer

      .main_wrap
        position absolute
        top 75px
        left 50px
        bottom 50px
        right 50px

        .card
          position absolute 
          top 0px
          bottom 0px
          left 0px
          right 0px
          background #f3f3f3
          box-shadow 0px 1px 1px rgba(0,0,0,0.2)
          font-style normal
          border-radius 5px

          .input_wrap, .select_wrap
            width 100%
            position relative
            height 40px

            input
              appearance none
              width calc(100% - 12px)
              height calc(100% - 12px)
              border 1px solid tan_gray
              border-radius 5px
              background none
              padding 5px
              margin 0
              outline none

            select
              appearance none
              width 100%
              height 100%
              background url("data:image/svg+xml;base64,") no-repeat calc(100% - 6px) 50%
              background-size 12px
              border-radius 5px
              border 0
              padding 5px
              border 1px solid tan_gray
              outline none

            input:focus, select:focus
              border 1px solid teal

          .inner
            background white
            position absolute 
            top 0
            bottom 2px
            right 0
            left 0
            border-radius 3px

            .top
              position absolute 
              top 0px
              left 0px
              right 0
              height 75px
              border-bottom 1px solid rgba(0,0,0,0.1)
              pointer-events none


              .main_title 
                position absolute
                font-size 20px
                left 25px
                top 25px
                color black


            .mid
              position absolute 
              top 76px
              left 0
              right 0
              bottom 11px
              overflow scroll
              padding 25px

              .description
                float left
                width 30%

                .description_title
                  height 20px
                  font-weight bold

                .description_body
                  padding-top 20px

              .settings
                float right
                overflow hidden
                width calc(70% - 11px)
                padding-left 10px
                padding-top 40px


                ul
                  li
                    width 100%
                    margin-bottom 10px
                    height 40px
                    position relative

                    .label 
                      position absolute 
                      left 0
                      top 0
                      bottom 0
                      width 140px                     
                      padding-top 10px
                      font-size 20px
                      text-align right
                      color tan_gray

                    .input_wrap, .select_wrap
                      position absolute 
                      right 0
                      top 0
                      bottom 0
                      width calc(100% - 150px)                   
                      padding-top 5px
                      text-align right

                .current_price //price
                  height 30px
                  width calc(100% - 150px) 
                  margin-left 150px                   
                  padding-top 0px
                  text-align center
                  color tan_gray


                .limits //compliance 

                  ul

                    li 
                      width 100%
                      margin-bottom 10px
                      height 40px
                      position relative

                      .label
                        width 180px 

                      .limit
                        position absolute 
                        left 190px
                        top 0
                        bottom 0
                        width calc(20% - 10px)

                        input 
                          text-align right

                        .currency
                          position absolute 
                          top 14px
                          left 6px

                      .verify_type
                        position absolute 
                        right 0
                        top 0
                        bottom 0
                        width calc(80% - 190px)

                .verify_service
                  position relative 
                  margin-top 50px
                  height 140px

                  input
                    text-align center

                  .label
                    position absolute 
                    top 0
                    bottom 0
                    left 0
                    width 180px                      
                    padding-top 5px
                    font-size 20px
                    text-align right
                    color tan_gray

                  .service
                    position absolute 
                    right 0
                    width calc(100% - 190px)

                  .username
                    position absolute 
                    top 50px
                    right 0
                    width calc(100% - 190px)

                  .password
                    position absolute 
                    top 100px
                    right 0
                    width calc(100% - 190px)



            .bot
              position absolute 
              bottom 0
              left 0
              right 0
              height 10px
              border-top 1px solid rgba(0,0,0,0.1)

